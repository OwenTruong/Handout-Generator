{
  "compilerOptions": {
    "target": "ES2020",

    "module": "CommonJS",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,

    "baseUrl": "src/modules",

    "paths": {
      "@/*": ["*"],
      "@classes/*": ["./classes/*"],
      "@constants/*": ["./constants/*"],
      "@defaults/*": ["./defaults/*"],
      "@functions/*": ["./functions/*"]
    }
  }
}
